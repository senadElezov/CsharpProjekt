<UserControl x:Class="CsharpProjekt.MyCircle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CsharpProjekt"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" Loaded="OnLoad">
    <Grid>
        <Ellipse Name="Pozadina" Stroke="White" StrokeThickness="5" MouseLeftButtonDown="Clicknut"></Ellipse>
        <Ellipse Visibility="Hidden" Name="Selektiran" Fill="White" Opacity="0.25" Stroke="Red" StrokeThickness="5" Margin="5"></Ellipse>
    </Grid>
</UserControl>
